%header.site-header
  %a.site-title(href="{{ site.baseurl }}/")
    = "{{ site.title }}"

  .site-description
    = "{{ site.description }}"

  %nav.site-nav
    %a.menu-icon(href="#")
      = "icon"

    .trigger
      = "{% for page in site.pages %}"
      = "{% if page.title %}"
      %a.page-link(href="{{ page.url | prepend: site.baseurl }}")
        = "{{ page.title }}"
      = "{% endif %}"
      = "{% endfor %}"

